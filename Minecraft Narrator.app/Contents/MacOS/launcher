#!/bin/bash
# Get the directory where the app is located
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && cd ../../.. && pwd )"
cd "$DIR"

# Run the Python launcher
if command -v python3 &> /dev/null; then
    python3 launcher.py
else
    osascript -e 'display dialog "Python 3 is not installed!\n\nPlease install Python 3 from:\nhttps://www.python.org/" buttons {"OK"} default button 1 with icon stop'
fi
